@model Kinder_La_Granja.Models.Tareas

<h2 class="mt-5 text-white text-center">Eliminar Tarea</h2>

<section class="form-container mb-5">
    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="_id" />

        <div class="form-row">
            <div class="form-group">
                <label>ID Tarea</label>
                <input type="text" value="@Model.id_tarea" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" value="@Model.nombre" class="form-control" readonly />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Descripción</label>
                <textarea class="form-control" readonly>@Model.descripcion</textarea>
            </div>
            <div class="form-group">
                <label>Fecha Asignada</label>
                <input type="text" value="@Model.fecha_asignada.ToShortDateString()" class="form-control" readonly />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Fecha Entrega</label>
                <input type="text" value="@Model.fecha_entrega.ToShortDateString()" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label>Docente</label>
                <input type="text" value="@ViewBag.DocenteNombre" class="form-control" readonly />
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4 flex-wrap gap-2">
            <a asp-action="Index" class="btn-cancel">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
            <button type="submit" class="btn-delete">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
        </div>
    </form>
</section>


<style>
    .form-container {
        max-width: 800px;
        margin: 30px auto;
        background: rgba(255, 255, 255, 0.1);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        color: white;
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .form-group {
        flex: 1;
        min-width: 240px;
    }

        .form-group label {
            font-weight: bold;
            margin-bottom: 5px;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: none;
    }

    .btn-cancel {
        background: #6c757d;
        padding: 10px 20px;
        border-radius: 5px;
        color: white;
        font-weight: bold;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background: #5a6268;
        }

    .btn-delete {
        background: #dc3545;
        padding: 10px 20px;
        border-radius: 5px;
        color: white;
        font-weight: bold;
        border: none;
    }

        .btn-delete:hover {
            background: #c82333;
        }
</style>
