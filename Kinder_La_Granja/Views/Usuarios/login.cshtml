@{
    ViewBag.Title = "Inicio De Sesión";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Kinder La Granja</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Kinder_La_Granja.styles.css" asp-append-version="true"/>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #f8f9fa;
        }

        .login-container {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            max-width: 400px;
        }

        .login-box {
            width: 100%;
            padding: 30px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            border-radius: 5px;
        }

        .password-container {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 10px;
            top: 70%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            padding: 0;
        }

        .toggle-password img {
            width: 20px;
            height: 20px;
            opacity: 0.6;
        }

        .toggle-password img:hover {
            opacity: 1;
        }

        .btn-primary {
            width: 100%;
            border-radius: 5px;
        }
    </style>
</head>
<body>

<div class="login-container">
    <div class="login-box">
        <h3 class="text-center mb-4">Iniciar Sesión</h3>
        <form method="post" asp-action="login" asp-controller="Usuarios">
            <!-- Email input -->
            <div class="form-outline mb-3">
                <label class="form-label" for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" required/>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-3 password-container">
                <label class="form-label" for="password">Contraseña</label>
                <input type="password" id="password" name="password" class="form-control" required/>
                <button type="button" class="toggle-password" onclick="togglePassword()">
                    <img id="eye-icon" src="@Url.Content("~/lib/img/icons/eye_password_close.png")" alt="Mostrar contraseña"/>
                </button>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block">Ingresar</button>

            <!-- Register link -->
            <div class="text-center mt-3">
                @if (ViewData["Mensaje"] != null)
                {
                    <span class="text-danger">
                            @ViewData["Mensaje"]
                        </span>
                }
                <p>No estás registrado? <a asp-action="register" asp-controller="Usuarios">Regístrate aquí</a></p>
            </div>
        </form>
    </div>
</div>

<script>
    function togglePassword() {
        const passwordInput = document.getElementById("password");
        const eyeIcon = document.getElementById("eye-icon");

        const eyeOpen = "@Url.Content("~/lib/img/icons/eye_password_open.png")";
        const eyeClose = "@Url.Content("~/lib/img/icons/eye_password_close.png")";

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            eyeIcon.src = eyeOpen;
        } else {
            passwordInput.type = "password";
            eyeIcon.src = eyeClose;
        }
    }
</script>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
