<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kinder La Granja</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kinder_La_Granja.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />


</head>
<body>
    <header>
        <div class="logo">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/img/kinderlogo.png" alt="Kinder Care Logo">
            </a>
            <span>Kinder La Granja</span>
        </div>
        <nav>
            <ul>
                <li><a asp-controller="Usuarios" asp-action="Index">
                    <i class="fas fa-user"></i>
                    Usuarios
                </a></li>
                <li><a asp-controller="Ninos" asp-action="Index">
                        <i class="fas fa-child"></i>
                        Niños
                    </a>
                    </li>
                <li><a asp-controller="Condiciones_Medicas" asp-action="Index">
                    <i class="fas fa-heart-pulse"></i>
                    Condiciones Médicas
                </a></li>
            </ul>
        </nav>
        <a asp-controller="Usuarios" asp-action="logout" class="btn-login">
            <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
        </a>
    </header>

    <div class="container" style="padding-top: 100px; min-height: 100vh;">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top mt-5">
        <div class="container text-center py-3">
            &copy; 2025 Kinder La Granja. Todos los derechos reservados.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #0a0f24, #040717);
            color: white;
            padding-top: 50px;
            min-height: 100vh;
            position: relative;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background: rgba(10, 15, 36, 0.9);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .logo {
            display: flex;
            align-items: center;
            font-size: 1.5em;
            font-weight: bold;
        }

            .logo img {
                width: 60px;
                height: 60px;
                border-radius: 50%;
                margin-right: 10px;
            }

        nav ul {
            list-style: none;
            display: flex;
            align-items: center;
            gap: 20px;
            margin: 0;
            padding: 0;
        }

            nav ul li a {
                color: white;
                text-decoration: none;
                font-size: 1em;
                display: flex;
                align-items: center;
                gap: 8px;
            }

        .btn-login {
            background: #007bff;
            padding: 10px 15px;
            border-radius: 8px;
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .btn-login:hover {
                background: #0056b3;
            }

        footer {
            color: #ffffff;
            
            text-align: center;
            padding: 20px 0;
        }
    </style>
</body>
</html>
