@model Kinder_La_Granja.Models.Ninos

<h2 class="mt-5 text-white text-center">Detalles del Niño</h2>

<section class="form-container mb-5">
    <form>
        <div class="form-row">
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" value="@Model.nombre" readonly />
            </div>
            <div class="form-group">
                <label>Cédula</label>
                <input type="text" value="@Model.cedula" readonly />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Fecha Nacimiento</label>
                <input type="text" value="@Model.fecha_nacimiento.ToShortDateString()" readonly />
            </div>
            <div class="form-group">
                <label>Dirección</label>
                <input type="text" value="@Model.direccion" readonly />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Póliza</label>
                <input type="text" value="@Model.poliza" readonly />
            </div>
            <div class="form-group">
                <label>Nivel</label>
                <input type="text" value="@Model.nivel" readonly />
            </div>
        </div>

        @if (Model.Referencias != null && Model.Referencias.Count > 0)
        {
            <h4 class="text-white">Referencias</h4>
            @foreach (var r in Model.Referencias)
            {
                <div class="form-row">
                    <div class="form-group">
                        <label>Parentesco</label>
                        <input type="text" value="@r.Parentesco" readonly />
                    </div>
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" value="@r.Nombre" readonly />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Cédula</label>
                        <input type="text" value="@r.Cedula" readonly />
                    </div>
                    <div class="form-group">
                        <label>Teléfono</label>
                        <input type="text" value="@r.Telefono" readonly />
                    </div>
                </div>
                <hr />
            }
        }

        <div class="form-row">
            <div class="form-group">
                <label>Condiciones Médicas</label>
                @if (Model.CondicionesMedicasDetalles != null && Model.CondicionesMedicasDetalles.Count > 0)
                {
                    <ul>
                        @foreach (var condicion in Model.CondicionesMedicasDetalles)
                        {
                            <li>@condicion.nombre</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No tiene condiciones médicas registradas.</p>
                }
            </div>
        </div>

        <div class="button-group mt-4 d-flex justify-content-center">
            <a asp-action="Index" class="btn-cancel">Volver al Listado</a>
            <a asp-action="VerTareas" asp-route-id="@Model._id" class="btn btn-primary">
                <i class="fas fa-tasks"></i> Ver Tareas
            </a>
        </div>
    </form>
</section>

<style>
    .form-container {
        max-width: 800px;
        margin: 30px auto;
        background: rgba(255, 255, 255, 0.1);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        color: white;
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        flex: 1;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: none;
            font-size: 1em;
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

    .btn-cancel {
        background: #6c757d;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        color: white;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            background: #5a6268;
        }
</style>