@model Kinder_La_Granja.Models.Ninos

@{
ViewData["Title"] = "Eliminar Usuario";
}

<section class="delete-container">
    <h2><i class="fas fa-exclamation-triangle warning-icon"></i> Eliminar Usuario</h2>

    <p class="delete-message">
        ¿Estás seguro de que deseas eliminar a <strong>@Model.nombre</strong>?
    </p>

    <form asp-action="Eliminar" method="post" class="delete-form">
        <input type="hidden" asp-for="_id"/>

        <div class="button-group">
            <button type="submit" class="btn btn-danger delete-btn">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</section>


<style>
    /* Estilos generales */
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #0a0f24, #040717);
        color: white;
        text-align: center;
    }

    /* Encabezado */
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        background: rgba(10, 15, 36, 0.9);
        position: fixed;
        width: 100%;
        top: 0;
        left: 0;
    }

    .logo {
        display: flex;
        align-items: center;
        font-size: 1.5em;
        font-weight: bold;
    }

    .logo img {
        width: 60px; /* Aumenta el tamaño */
        height: 60px;
        border-radius: 50%; /* Hace el logo redondeado */
        margin-right: 10px;
    }

    nav {
        display: flex;
        align-items: center; /* Alinea verticalmente */
        gap: 20px; /* Espaciado entre elementos */
    }

    nav ul {
        list-style: none;
        display: flex;
        align-items: center; /* Alinea los íconos con el texto */
        gap: 20px;
        margin: 0;
        padding: 0;
    }


    nav ul li a {
        color: white;
        text-decoration: none;
        font-size: 1em;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-login {
        background: #007bff;
        padding: 10px 15px;
        border-radius: 8px;
        color: white;
        text-decoration: none;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-login:hover {
        background: #0056b3;
    }

    /* Sección Hero */
    .hero {
        text-align: center;
        padding: 150px 20px;
    }

    .hero h1 {
        font-size: 3em;
        font-weight: bold;
    }

    .highlight {
        color: #007bff;
        font-weight: bold;
    }

    /* Contenedor de eliminación */
    .delete-container {
        background: rgba(255, 0, 0, 0.1); /* Fondo rojo semitransparente */
        padding: 50px;
        margin: 150px auto;
        max-width: 500px;
        border-radius: 10px;
        box-shadow: 0px 0px 20px rgba(255, 0, 0, 0.5);
    }

    .warning-icon {
        color: #ffcc00;
        font-size: 2em;
    }

    .delete-message {
        font-size: 1.2em;
        margin-bottom: 20px;
    }

    /* Efecto de "shake" al pasar el mouse */
    .delete-btn:hover {
        animation: shake 0.3s ease-in-out;
        background: darkred;
    }

    shake {
        0% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        50% { transform: translateX(5px); }
        75% { transform: translateX(-5px); }
        100% { transform: translateX(0); }
    }

    /* Botones */
    .button-group {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .btn {
        padding: 12px 20px;
        font-size: 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-danger {
        background: red;
        color: white;
        border: none;
    }

    .btn-secondary {
        background: gray;
        color: white;
        text-decoration: none;
        display: inline-block;
    }

    .btn-secondary:hover {
        background: darkgray;
    }

</style>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        console.log("Página cargada correctamente.");
    });
</script>



