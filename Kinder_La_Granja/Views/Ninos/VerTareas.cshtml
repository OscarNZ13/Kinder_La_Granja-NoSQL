@model List<Kinder_La_Granja.Models.Tareas>

@{
    ViewData["Title"] = "Tareas del Niño";
}

<h2 class="mt-5 text-white text-center">Tareas Asignadas</h2>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info text-center mt-4">
        Este niño no tiene tareas asignadas.
    </div>
}
else
{
    <div class="table-container">
        <div class="table-wrapper">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Descripción</th>
                        <th>Fecha entrega</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tarea in Model)
                    {
                        <tr>
                            <td>@tarea.nombre</td>
                            <td>@tarea.descripcion</td>
                            <td>@tarea.fecha_entrega.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="button-group mt-4 d-flex justify-content-center">
    <a asp-action="Detalle" asp-route-id="@ViewBag.NinoId" class="btn-cancel">Volver a Detalles</a>
</div>

<style>
    .table-container {
        max-width: 90%;
        margin: auto;
        background: rgba(255, 255, 255, 0.1);
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
    }

    .table-wrapper {
        max-height: 400px;
        overflow-y: auto;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        color: white;
    }

    .custom-table thead {
        position: sticky;
        top: 0;
        background: #007bff;
        color: white;
        z-index: 10;
    }

    .custom-table th, .custom-table td {
        padding: 12px;
        text-align: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .btn-cancel {
        background: #6c757d;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        color: white;
        transition: 0.3s;
    }

    .btn-cancel:hover {
        background: #5a6268;
    }
</style>
