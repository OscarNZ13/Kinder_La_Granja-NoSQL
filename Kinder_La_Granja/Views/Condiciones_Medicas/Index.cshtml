@model IEnumerable<Condiciones_Medicas>

@{
    ViewData["Title"] = "Index de Condiciones_Medicas";
}

    <section class="hero">
        <h2>Condiciones Medicas</h2>
    <br>
    <div>
        <a asp-action="Create" class="btn btn-info text-white">
            <i class="fas fa-plus-circle"></i> Agregar Condicion Medica
        </a>
    </div>
    <br><br>
        <div class="table-container">
            <div class="table-wrapper">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>Condiciones Medicas</th>
                           
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Condiciones_Medicas in Model)
                        {
                            <tr>
                                <td>@Condiciones_Medicas.nombre</td>
                             
                                 <td class="actions">
                                <a asp-action="Editar" asp-route-id="@Condiciones_Medicas.Id.ToString()" class="btn btn-edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                <a asp-action="Eliminar" asp-route-id="@Condiciones_Medicas.Id.ToString()" class="btn btn-delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td> 
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

<style>
    /* Estilos generales */
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #0a0f24, #040717);
        color: white;
    }

    /* Encabezado */
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        background: rgba(10, 15, 36, 0.9);
        position: fixed;
        width: 100%;
        top: 0;
        left: 0;
        z-index: 1000;
    }
    /* 🔹 Agregar espacio en el contenido para evitar que se superponga con el header */
    .hero {
        padding-top: 100px; /* Ajusta este valor según la altura del header */
    }

    .logo {
        display: flex;
        align-items: center;
        font-size: 1.5em;
        font-weight: bold;
    }

        .logo img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            margin-right: 10px;
        }

    nav ul {
        list-style: none;
        display: flex;
        gap: 20px;
        margin: 0;
        padding: 0;
    }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 1em;
            display: flex;
            align-items: center;
            gap: 8px;
        }

    .btn-login {
        background: #007bff;
        padding: 10px 15px;
        border-radius: 8px;
        color: white;
        text-decoration: none;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-login:hover {
            background: #0056b3;
        }

    /* Sección Usuarios */
    .hero {
        text-align: center;
        padding: 150px 20px;
    }

    /* Contenedor de la tabla */
    .table-container {
        max-width: 90%;
        margin: auto;
        background: rgba(255, 255, 255, 0.1);
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
    }

    /* Contenedor con scroll interno */
    .table-wrapper {
        max-height: 400px; /* Altura máxima antes de activar el scroll */
        overflow-y: auto; /* Scroll vertical cuando hay muchos datos */
    }

    /* Estilos de la tabla */
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        color: white;
    }

        /* Fijar el encabezado y centrar los textos */
        .custom-table thead {
            position: sticky;
            top: 0;
            background: #007bff;
            color: white;
            z-index: 10;
        }

        .custom-table th, .custom-table td {
            padding: 12px;
            text-align: center; /* Centra los datos y los títulos */
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

    /* Estilos de botones */
    .btn {
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 0.9em;
        font-weight: bold;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-edit {
        background: #ffc107;
        color: black;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
    }

    /* Badges de roles */
    .rol-badge {
        padding: 5px 10px;
        border-radius: 8px;
        font-size: 0.9em;
        font-weight: bold;
    }

    .rol-1 {
        background: #ff9800;
        color: white;
    }
    /* Administrador */
    .rol-2 {
        background: #2196F3;
        color: white;
    }
    /* Docente */
    .rol-3 {
        background: #4CAF50;
        color: white;
    }
    /* Padre */
</style>

