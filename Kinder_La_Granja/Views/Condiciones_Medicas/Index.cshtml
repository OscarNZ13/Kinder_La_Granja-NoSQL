@model IEnumerable<Condiciones_Medicas>

@{
    ViewData["Title"] = "Index de Condiciones_Medicas";
}
<h2 class="mt-5 text-white text-center">Condiciones Medicas</h2>

<section>
    @if (User.IsInRole("1"))
    {
        <div class="d-flex justify-content-center mb-4 px-5">
            <a asp-action="Create" class="btn btn-info text-white">
                <i class="fas fa-plus-circle"></i> Agregar Condicion Medica
            </a>
        </div>
    }
    <div class="table-container">
        <div class="table-wrapper">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>Condiciones Medicas</th>
                        @if (User.IsInRole("1"))
                        {
                            <th>Acciones</th>
                        }
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var Condiciones_Medicas in Model)
                        {
                            <tr>
                                <td>@Condiciones_Medicas.nombre</td>
                            @if (User.IsInRole("1"))
                            {
                                 <td class="actions">
                                    <a asp-action="Editar" asp-route-id="@Condiciones_Medicas.Id.ToString()" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a asp-action="Eliminar" asp-route-id="@Condiciones_Medicas.Id.ToString()" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </a>
                                </td>
                            }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
<style>
    .table-container {
        max-width: 90%;
        margin: auto;
        background: rgba(255, 255, 255, 0.1);
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
    }

    .table-wrapper {
        max-height: 400px;
        overflow-y: auto;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        color: white;
    }

        .custom-table thead {
            position: sticky;
            top: 0;
            background: #007bff;
            color: white;
            z-index: 10;
        }

        .custom-table th, .custom-table td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }
</style>

