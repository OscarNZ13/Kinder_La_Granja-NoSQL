@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kinder Care - Inicio</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>

<!-- Encabezado -->
<header>
    <div class="logo">
        <img src="~/img/kinderlogo.png" alt="Kinder Care Logo">
        <span>Kinder La Granja</span>
    </div>
    <nav>
        <ul>
            <li><a href="#"><i class="fas fa-user"></i> Usuarios</a></li>
            <li><a href="#"><i class="fas fa-child"></i> Niños</a></li>
        </ul>
    </nav>
    <a asp-controller="Usuarios" asp-action="logout" class="btn-login">
        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
    </a>
</header>

<!-- Sección principal -->
<section class="hero">
    <h1>Bienvenido a <span class="highlight">Kinder La Granja</span></h1>
    <p>Todo lo que necesitas para el desarrollo de los más pequeños en un solo lugar.</p>
</section>

</body>
</html>

<style>
    /* Estilos generales */
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #0a0f24, #040717);
        color: white;
    }

    /* Encabezado */
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        background: rgba(10, 15, 36, 0.9);
        position: fixed;
        width: 100%;
        top: 0;
        left: 0;
    }

    .logo {
        display: flex;
        align-items: center;
        font-size: 1.5em;
        font-weight: bold;
    }

    .logo img {
        width: 60px; /* Aumenta el tamaño */
        height: 60px;
        border-radius: 50%; /* Hace el logo redondeado */
        margin-right: 10px;
    }

    nav {
        display: flex;
        align-items: center; /* Alinea verticalmente */
        gap: 20px; /* Espaciado entre elementos */
    }

    nav ul {
        list-style: none;
        display: flex;
        align-items: center; /* Alinea los íconos con el texto */
        gap: 20px;
        margin: 0;
        padding: 0;
    }


    nav ul li a {
        color: white;
        text-decoration: none;
        font-size: 1em;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-login {
        background: #007bff;
        padding: 10px 15px;
        border-radius: 8px;
        color: white;
        text-decoration: none;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-login:hover {
        background: #0056b3;
    }

    /* Sección Hero */
    .hero {
        text-align: center;
        padding: 150px 20px;
    }

    .hero h1 {
        font-size: 3em;
        font-weight: bold;
    }

    .highlight {
        color: #007bff;
        font-weight: bold;
    }
    
    
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        console.log("Página cargada correctamente.");
    });
</script>
